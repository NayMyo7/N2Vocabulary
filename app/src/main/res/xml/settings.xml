<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Myanmar Font">
        <ListPreference
            android:defaultValue="Zawgyi"
            android:entries="@array/font_type"
            android:entryValues="@array/font_type"
            android:key="fontType"
            android:summary="Select the font to display."
            android:title="Zawgyi/Unicode" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Text To Speech">
        <SwitchPreference
            android:defaultValue="true"
            android:key="jpSpeech"
            android:summary="This option is selected will speak vocabulary and question when touch. (Japanese voice data is needed!)"
            android:title="Japanese Speech" />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:summary="1.0"
            android:title="Version" />
        <Preference
            android:key="about"
            android:title="About us" />
    </PreferenceCategory>

</PreferenceScreen>
